[user]
  email = valotas@gmail.com
  name = Georgios Valotasios

[color]
	ui = true

[core]
	autocrlf = input

[help]
	autocorrect = 1

[push]
	default = current
	followTags = true

[alias]
	co = checkout
	po = push

	# log from https://stackoverflow.com/questions/1057564/pretty-git-branch-graphs
	tree = log --decorate --oneline --graph

	st = status -sb

[url "git@github.com:"]
	insteadOf = https://github.com/

[include]
	path = ~/.gitconfig.local
